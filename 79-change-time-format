public String changeTimeFormat(String strTime) {
    //code here
    List<String> ls = strTime.split(':');
    Integer hour = Integer.valueOf(ls[0]);
    Integer min = Integer.valueOf(ls[1]);
    String suffix;
    if(hour > 12){
        hour = hour - 12;
        suffix = ' PM';
    }
    else{
        suffix = ' AM';
    }
    if(hour == 0){
        hour = 12;
    }
    String finalString = String.valueOf(hour) + ':' + String.valueOf(min) + suffix;
    return finalString;

}